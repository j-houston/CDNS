config globals 'globals'
	option ifbname 'ifb1'
	option dhcpleases '/tmp/dhcp.leases'
	option storage '/tmp/testing'
	option max_capture_size '1M'
	option max_capture_time '60'
	option default_profile 'full'
	list interface 'lan'
	list allowed_subnets '192.168.1.0/24'

config profile 'full'
	option name 'Full'
	option in 'rate 100Mbit'
	option in_netem 'delay 0ms'
	option out 'rate 100Mbit'
	option out_netem 'delay 0ms'

config profile 'hsdpa'
	option name 'HSDPA'
	option in 'rate 1000kbit'
	option in_netem 'delay 50ms 10ms'
	option out 'rate 1000kbit'
	option out_netem 'delay 50ms 10ms'

config profile 'edge'
	option name 'EDGE'
	option in 'rate 200kbit'
	option in_netem 'delay 120ms 40ms'
	option out 'rate 260kbit'
	option out_netem 'delay 120ms 40ms'

config profile 'gprs'
	option name 'GPRS'
	option in 'rate 80kbit'
	option in_netem 'delay 200ms 40ms'
	option out 'rate 20kbit'
	option out_netem 'delay 200ms 40ms'

config profile 'disabled'
	option name 'Disabled'
	option in 'rate 1000bit'
	option in_netem 'loss 100%'
	option out 'rate 1000bit'
	option out_netem 'loss 100%'

